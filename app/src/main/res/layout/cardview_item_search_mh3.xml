<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="115dp"
    android:layout_height="240dp"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <TextView
                android:id="@+id/lblNameProduct"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:textColor="#000000"
                android:text="@string/lblNameProduct"/>

            <TextView
                android:id="@+id/lblPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblNameProduct"
                android:layout_marginLeft="10dp"
                android:textSize="10sp"
                android:textColor="#FF0000"
                android:text="@string/lblNameProduct"/>
            <Button
                android:id="@+id/btnSave"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="right"
                android:layout_toRightOf="@id/lblNameProduct"
                android:background="@drawable/ic_save"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp">

            <Button
                android:layout_marginLeft="10dp"
                android:id="@+id/btnStar1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@id/lblPrice"
                android:background="@drawable/ic_star_color"/>
            <Button
                android:id="@+id/btnStar2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@id/btnStar1"
                android:layout_below="@id/lblPrice"
                android:background="@drawable/ic_star_no_color"/>
            <Button
                android:id="@+id/btnStar3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@id/btnStar2"
                android:layout_below="@id/lblPrice"
                android:background="@drawable/ic_star_no_color"/>
            <Button
                android:id="@+id/btnStar4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@id/btnStar3"
                android:layout_below="@id/lblPrice"
                android:background="@drawable/ic_star_no_color"/>
            <Button
                android:id="@+id/btnStar5"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@id/btnStar4"
                android:layout_below="@id/lblPrice"
                android:background="@drawable/ic_star_no_color"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>